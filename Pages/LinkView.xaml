<Page x:Class="Symbolic11.Pages.LinkView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="367"
      d:DesignWidth="622"
      Title="LinkView">


    <Border x:Name="border"
            Grid.Row="1"
            Grid.Column="1"
            BorderThickness="1"
            CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Margin="5,5,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Content="Search Directory:"
                       Margin="5,0,0,0"
                       FontFamily="{StaticResource SegoueUIVariable}"
                       FontSize="15"
                       VerticalAlignment="Bottom" />
                <TextBox x:Name="SearchPathText"
                         Grid.Row="1"
                         Grid.Column="0"
                         TextWrapping="Wrap"
                         Foreground="White"
                         IsEnabled="False" />
                <Button x:Name="changeSearchDirectory"
                        Grid.Row="1"
                        Grid.Column="1"
                        Click="changeSearchDirectory_Click"
                        Margin="6,0,0,0"
                        Content="Browse"
                        HorizontalAlignment="Right" />
                <Button x:Name="searchButton"
                        Click="searchButton_Click"
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="14,0,0,0"
                        Content="Search"
                        HorizontalAlignment="Right" />


            </Grid>

            <Grid Grid.Row="1"
                  Margin="5,0,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Column="0"
                            Grid.Row="0"
                            Margin="0,10,10,0"
                            BorderThickness="1"
                            CornerRadius="5">
                        <ui:DataGrid x:Name="linkDataGrid"
                                     SelectionChanged="linkDataGrid_SelectionChanged"
                                     MouseDoubleClick="linkDataGrid_MouseDoubleClick"
                                     AutoGenerateColumns="False"
                                     RowStyle="{StaticResource DefaultDataGridRowStyle}"
                                     BorderThickness="0,0,0,0"
                                     Foreground="White"
                                     SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Source"
                                                    Width="*"
                                                    Binding="{Binding Source}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Type"
                                                    Width="Auto"
                                                    Binding="{Binding Type}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Target"
                                                    Width="*"
                                                    Binding="{Binding Target}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Result"
                                                    Width="Auto"
                                                    Binding="{Binding Result}"
                                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </ui:DataGrid>
                    </Border>
                    <Label Grid.Row="1"
                           Content="Current Task:"
                           Margin="5,0,0,0"
                           FontFamily="{StaticResource SegoueUIVariable}"
                           FontSize="15"
                           VerticalAlignment="Bottom" />
                    <TextBox x:Name="currentSearchDirectory"
                             MaxHeight="36"
                             Grid.Row="2"
                             Margin="0,0,10,4"
                             TextWrapping="Wrap"
                             Foreground="White"
                             IsEnabled="False" />
                </Grid>

                <Button x:Name="DeleteLink"
                        Click="DeleteLink_Click"
                        Margin="0,0,0,5"
                        Content="Delete"
                        Grid.Column="1"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        IsEnabled="False" />
            </Grid>
        </Grid>
    </Border>
</Page>
